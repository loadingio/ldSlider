.ldrs
  position: relative
  height: 34px
  padding: 0 10px
  .bar, .fg, .bk, .cap
    height: 12px
  .bar-inner
    background: #00f
    width: 100%
    height: 100%
  .bar
    width: 100%
    position: relative
    background: #0f0
    .cap
      background: #f00
      width: 10px
      position: absolute
    .cap:nth-child(1)
      border-radius: 5px 0 0 5px
      top: 0
      left: -10px
    .cap:nth-child(2)
      border-radius: 0 5px 5px 0
      background: #eee
      top: 0
      right: -10px
    .fg
      width: 50%
      background: #f00
      position: absolute
      left: 0
      right: 50px
      width: auto
      top: 0
    .bk
      background: #eee
      position: absolute
      top: 0
      left: 0
      right: 0
      width: auto
  .ptr
    position: absolute
    width: 9px
    height: 21px
    top: -3px
    left: 0
    margin-left: -3px
    cursor: pointer
    background: rgba(255,255,255,0.01)
    &:after
      content: " "
      display: block
      width: 3px
      height: 100%
      margin-left: 3px
      background: #f00
      border-radius: 12x
  .hint
    background: #eee
    color: #aaa
    font-family: sans-serif
    padding: 1px 4px 2px
    font-size: 10px
    display: inline-block
    border-radius: 3px
    position: absolute
    top: 18px
    user-select: none
    line-height: 1em
    z-index: 0
    transition: none
  .hint.l
    left: 0
  .hint.r
    right: 0
  .hint.p
    background: #f00
    color: #fff
    cursor: pointer
    z-index: 1

.ldrs.up
  .ptr
    top: -5px
  .bar
    top: 18px
  .hint
    top: 0
  .hint.p
    top: auto
    bottom: 17px
  .hint.p
    margin-left: 1px
