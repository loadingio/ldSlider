.ldrs
  position: relative
  height: 34px
  .bar, .fg, .bk, .cap
    height: 12px
  .bar
    width: 100%
    position: relative
    padding: 0 0
    background: #ff0
    .cap
      background: #f00
      width: 10px
      position: absolute
    .cap:first-child
      border-radius: 5px 0 0 5px
      top: 0
      left: 0
    .cap:last-child
      border-radius: 0 5px 5px 0
      background: #eee
      top: 0
      right: 0
    .fg
      width: 50%
      background: #f00
      position: absolute
      left: 10px
      right: 50px
      width: auto
      top: 0
    .bk
      background: #eee
      position: absolute
      top: 0
      left: 10px
      right: 10px
      width: auto
  .ptr
    position: absolute
    width: 9px
    height: 18px
    top: -3px
    left: 10px
    margin-left: -3px
    cursor: pointer
    background: rgba(255,255,255,0.01)
    &:after
      content: " "
      display: block
      width: 3px
      height: 100%
      margin-left: 3px
      background: #f00
      border-radius: 12x
  .hint
    background: #eee
    color: #aaa
    font-family: sans-serif
    padding: 0 4px 0
    font-size: 10px
    display: inline-block
    border-radius: 3px
    position: absolute
    top: 15px
    user-select: none
  .hint.l
    left: 0
  .hint.r
    right: 0
  .hint.p
    background: #f00
    color: #fff
    cursor: pointer
    &:after
      box-sizing: border-box
      position: absolute
      content: " "
      display: block
      top: 0
      left: 50%
      width: 0px
      height: 0px
      transform: translate(-3px,-3px) rotate(45deg)
      border: 3px solid #f00
      border-color: #f00 transparent transparent #f00

.ldrs.up
  .ptr
    top: 12px
  .bar
    top: 15px
  .hint
    top: 0

  .hint.p
    &:after
      top: auto
      bottom: 0
      transform: translate(-3px,3px) rotate(45deg)
      border-color: transparent #f00 #f00 transparent

